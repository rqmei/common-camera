<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.timingbar.android.library">
    <!--相机-->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允许程序读取或写入系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!---ACCESS_FINE_LOCATION：允许APP访问精确地理位置。-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!---ACCESS_COARSE_LOCATION：允许APP访问大概地理位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.timingbar.android.library.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--二维码扫描-->
        <activity android:name="com.timingbar.android.library.ScanActivity"
                  android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                  android:screenOrientation="portrait"
        />
        <!--拍照-->
        <activity android:name="com.timingbar.android.library.CameraActivity"/>
        <!--手写签名-->
        <activity android:name="com.timingbar.android.library.HandSignActivity"/>
    </application>

</manifest>